<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:WpfApp1"
    xmlns:UserCtrl="clr-namespace:WpfApp1.UserCtrl" x:Class="WpfApp1.MainWindow"
    mc:Ignorable="d"
    Title="MainWindow"
    Height="270" Width="300" 
    MinHeight="270" MinWidth="300" 
    MaxHeight="700"
    ResizeMode="NoResize"
    WindowStyle="None"
    Background="#F1F1F1"
    
    MouseRightButtonDown="Window_MouseRightButtonDown"
    MouseLeftButtonDown="Window_MouseLeftButtonDown"
    
    AllowDrop="True"
    Drop="Window_Drop"
>
    <Grid>
        <Grid VerticalAlignment="Top" Width="300" Height="36">
            <Grid.Background>
                <ImageBrush ImageSource="Images/nav.png"></ImageBrush>
            </Grid.Background>
            <Button Width="18" Height="18" 
            Margin="0,0,24,0"
            HorizontalAlignment="Right" VerticalAlignment="Center" 
            BorderBrush="White"
                    Background="White"
            Click="Button_Click" >
                <Image Source="Images/addtitle.png"></Image>
            </Button>
        </Grid>
        
        <Grid Name="main">
            <ScrollViewer Margin="0,36,0,0" Focusable="False">
                <StackPanel x:Name="MyList" HorizontalAlignment="Left" VerticalAlignment="Top"
                    SizeChanged="MyList_SizeChanged" >

                </StackPanel>
            </ScrollViewer>

            
        </Grid>
    </Grid>
    
</Window>
