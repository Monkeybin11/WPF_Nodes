<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:WpfApp1"
    xmlns:UserCtrl="clr-namespace:WpfApp1.UserCtrl" x:Class="WpfApp1.MainWindow"
    mc:Ignorable="d"
    Title="MainWindow"
    Height="270" Width="250" 
    MinHeight="200" MinWidth="250" 
    ResizeMode="NoResize"
    WindowStyle="None"
    MouseRightButtonDown="Window_MouseRightButtonDown"
    MouseLeftButtonDown="Window_MouseLeftButtonDown"
    Background="AliceBlue"
>
    <Grid Name="main">
        <StackPanel x:Name="MyList" HorizontalAlignment="Left" VerticalAlignment="Top"
                    SizeChanged="MyList_SizeChanged">

        </StackPanel>

        <Button Content="Add" 
                Width="40" Height="40" 
                HorizontalAlignment="Right" VerticalAlignment="Top" 
                Click="Button_Click" />
    </Grid>
</Window>
